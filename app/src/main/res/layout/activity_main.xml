<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backround1"
    tools:context="com.muhammadraafi.finalproject.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/judul"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="MAMALIA"
            android:textStyle="bold"
            android:id="@+id/btn_lv_mamalia"
            android:layout_gravity="center"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="REPTILIA"
            android:textStyle="bold"
            android:id="@+id/btn_lv_reptilia"
            android:layout_gravity="center"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="AVES"
            android:textStyle="bold"
            android:id="@+id/btn_lv_aves"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="AMPHIBIA"
            android:textStyle="bold"
            android:id="@+id/btn_lv_amphibia"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="PISCES"
            android:textStyle="bold"
            android:id="@+id/btn_lv_pisces"
            android:layout_gravity="center"/>
    </LinearLayout>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#757575"
        fab:menu_colorPressed="#757575"
        fab:menu_colorRipple="#99d4d4d4"

        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66aff198"
        fab:menu_showShadow="false">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fap_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_on"
            fab:fab_label="Favorite"
            fab:fab_size="mini"
            fab:fab_colorNormal="#03a9f4"
            fab:fab_colorPressed="#757575"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fap_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            fab:fab_label="Delete"
            fab:fab_size="mini"
            fab:fab_colorNormal="#03a9f4"
            fab:fab_colorPressed="#757575"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fap_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_preferences"
            fab:fab_label="Option"
            fab:fab_size="mini"
            fab:fab_colorNormal="#03a9f4"
            fab:fab_colorPressed="#757575"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fap_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            fab:fab_label="Add"
            fab:fab_size="mini"
            fab:fab_colorNormal="#03a9f4"
            fab:fab_colorPressed="#757575"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fap_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_revert"
            fab:fab_label="Exit"
            fab:fab_size="mini"
            fab:fab_colorNormal="#03a9f4"
            fab:fab_colorPressed="#757575"/>
    </com.github.clans.fab.FloatingActionMenu>
</RelativeLayout>
